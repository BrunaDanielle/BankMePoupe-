<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@android:color/white"
    android:elevation="3dp"
    app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:layout_constraintBottom_toTopOf="@+id/value_sent"
            app:layout_constraintTop_toTopOf="@+id/value_sent">

            <TextView
                android:id="@+id/name_client_sent"
                android:layout_width="103dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:text="Transferido do:"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@+id/id_from"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_sent"
                android:layout_width="91dp"
                android:layout_height="62dp"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:inputType="textMultiLine"
                android:text="20/08/2019"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/value_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="100,00"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="R$:"
                android:textColor="@color/colorAccent"
                app:layout_constraintBaseline_toBaselineOf="@+id/value_sent"
                app:layout_constraintStart_toEndOf="@+id/view4" />

            <View
                android:id="@+id/view4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="116dp"
                android:layout_marginLeft="116dp"
                android:background="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/id_from"
                android:layout_width="58dp"
                android:layout_height="21dp"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/name_client_sent"
                app:layout_constraintEnd_toStartOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="39dp"
                android:layout_height="20dp"
                android:text="Para: "
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/id_from"
                app:layout_constraintEnd_toStartOf="@+id/id_to" />

            <TextView
                android:id="@+id/id_to"
                android:layout_width="44dp"
                android:layout_height="21dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/textView20"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>